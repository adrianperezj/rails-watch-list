<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Make a fun list and share it with your friends</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>
<div class="container p-5 mx-3">
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <div class="card col-md-4 rounded shadow p-3 mx-2 my-2">
        <p><%=  render list %></p>
         <div class="button">
          <%= link_to "See more", list_path(list), class: 'btn btn-flat mx-2 my-2' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
