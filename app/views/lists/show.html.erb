<div class="container">
  <div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <h1 style="color: white;">Movie List: <%= @list.name %></h1>
  </div>
  <div class="container p-3 mx-5 my-3">
    <div id="card p-3 mx-5 my-3">
      <%= render @list %>
    </div>
  </div>
  <div>
    <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
      add a movie
    </button>
    <%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
  </div>
  <div class="container p-5 mx-3 my-3">
    <h3>Bookmarks</h3>
    <% @list.movies.each do |movie| %>
      <div class="card col-6 rounded shadow p-3 mx-5 my-3">
        <p><%= movie.title %></p>
        <p><%= movie.rating %></p>
      </div>
    <% end %>
    <div class="container p-1 mx-1 my-1">
      <p>
        <%= render "bookmarks/form", list: @list, bookmark: @bookmark %>
      </p>
    </div>
    <div class="container">
      <%= link_to "Back to lists", root_path, class:"btn btn-flat" %>
    </div>
  </div>
</div>
