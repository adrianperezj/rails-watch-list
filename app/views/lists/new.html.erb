<div class="container">
  <div class="container p-5 mx-3 my-3">
    <h1>New List</h1>
    <%= link_to "Back to lists", root_path, class:"btn btn-flat" %>
  </div>

  <div class="container p-5 mx-3 my-3">
    <div class="container">
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, placeholder: 'Drama list' %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-flat" %>
      <% end %>
    </div>
  </div>
</div>
